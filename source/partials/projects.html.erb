<div class="cards">
  <% data.projects.each_with_index do |project, index| %>
    <%# create individual cards %>
    <%# set card alignment %>
    <div class="card col-9 <%= index % 2 == 1 ? 'card-right' : '' %>">
      <%= image_tag project.image, alt: "project image" %>
      <%# set text alignment %>
      <div class=<%= index % 2 == 1 ? 'right-align' : '' %>>
        <h2><%= project.name %></h2>
        <h3><%= project.description %></h3>
        <ul class="stats">
          <li>
            <var><%= project.developers %></var>
            <label>Developers</label>
          </li>
          <li>
            <var><%= project.days %></var>
            <label>Days</label>
          </li>
          <li>
            <var><%= project.cups %></var>
            <label>Cups of Tea</label>
          </li>
        </ul>
        <nav class="buttons">
          <a href=<%= project.code_url %> class="primary button", target='_blank'>View Code</a>
          <a href=<%= project.url %> class="button", target='_blank'>Visit Site</a>
        </nav>
      </div>
      <div class="tech-stack">
        <div class="d-flex justify-content-center flex-column">
          <div class="button-social">
            <i class="fa-brands fa-html5 fa-lg"></i>
          </div>
          <div class="button-social">
            <i class="fa-brands fa-css3-alt fa-lg"></i>
          </div>
          <div class="button-social">
            <i class="fa-brands fa-js fa-lg"></i>
          </div>
          <div class="button-social">
            <i class="bi bi-filetype-rb fa-lg"></i>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
